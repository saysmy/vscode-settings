{
    "window.zoomLevel": 0.7,
    // 开启eslint
    "eslint.packageManager": "yarn",
    "eslint.validate": [
        "javascript",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    // 开启保存即修复
    "eslint.autoFixOnSave": true,
    "files.encoding": "utf8",
    // 字体大小
    "editor.fontSize": 12,
    // 自动换行
    "editor.wordWrap": "on",
    // 设置doc this插件注释的内容，增加姓名，日期
    "docthis.authorName": "smy",
    "docthis.includeAuthorTag": true,
    "docthis.includeDateTag": true,
    "docthis.includeDescriptionTag": true,
    // 不用jsDoc注释
    "jsDocCompletion.enabled": false,
    // 主题
    "workbench.colorTheme": "Default Light+",
    // 显示底部状态栏和左侧活动栏
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    // 一个制表符四个空格
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    // 窗口title显示文件路径
    "window.title": "${dirty}${activeEditorShort}${separator}${folderPath}${separator}${activeEditorLong}${separator}${appName}",
    // 显示代码片段提示，并置于顶层
    "emmet.showSuggestionsAsSnippets": true,
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": true,
    // 若搜索词全为小写，则不区分大小写进行搜索，否则区分大小写进行搜索
    "search.smartCase": true,
    // 搜索文件点击确定后，新tab打开页面，不覆盖当前页面
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // 控制资源管理器是否应在打开文件时自动显示并选择它们。
    "explorer.autoReveal": false,
    // php可执行文件地址
    "php.validate.executablePath": "D:/php-7.2.9-Win32-VC15-x64/php.exe",
    "php.executablePath": "D:/php-7.2.9-Win32-VC15-x64/php.exe"
}
